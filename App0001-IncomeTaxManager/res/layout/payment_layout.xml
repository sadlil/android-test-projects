<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/txtPayTax"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Select Your Paying Method from Below."
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnFindOffice"
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:text="Find Nearest Income Tax Office" />
    
    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="145dp" >

        <ImageButton
            android:id="@+id/btnQcash"
            android:layout_width="159dp"
            android:layout_height="wrap_content"
            android:src="@drawable/qcash" />

        <ImageButton
            android:id="@+id/btnVisa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/visa" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="match_parent"
        android:layout_height="145dp" >
        
        <ImageButton
            android:id="@+id/btnMastercard"
            android:layout_width="159dp"
            android:layout_height="wrap_content"
            android:src="@drawable/mastercard" />

        <ImageButton
            android:id="@+id/btnBikash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bkash" />
   
    </TableRow>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:text="Login Into Your Online Tax Account" />

</LinearLayout>